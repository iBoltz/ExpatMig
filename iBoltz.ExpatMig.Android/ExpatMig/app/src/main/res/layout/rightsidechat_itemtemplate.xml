<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_panel"
        android:layout_margin="@dimen/margin_s">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="pon@iboltz.com"
                android:id="@+id/lblUserName"
                android:layout_gravity="left"
                android:layout_weight="0.7"
                android:padding="@dimen/padding_m"
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/dark_gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="12-Jan-2016 14:22"
                android:id="@+id/lblCreatedDate"
                android:layout_weight="0.25"
                android:gravity="right"
                android:padding="@dimen/padding_m"
                android:textColor="@color/iBoltzDarkGray" />

        </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <iboltz.expatmig.emojicon.EmojiconTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_m"
        android:textColor="#000"
        android:textSize="@dimen/text_size_m"
        android:id="@+id/lblRightSideMsg"
        />
</RelativeLayout>

    </LinearLayout>

</LinearLayout>